@page "/Error"
@using System.Diagnostics
@inject IWebHostEnvironment Environment

<PageTitle>Erreur - Nicolas Qui Paie</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="error-container">
                <!-- Error Icon -->
                <div class="error-icon mb-4">
                    <i class="fas fa-exclamation-triangle fa-5x text-warning"></i>
                </div>
                
                <!-- Error Message -->
                <h1 class="display-4 fw-bold text-primary mb-3">Oups !</h1>
                <h2 class="h4 mb-4">Nicolas a rencontré un problème</h2>
                
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <p class="text-muted mb-0">
                            Une erreur inattendue s'est produite. Nos équipes Nicolas travaillent déjà sur le problème !
                        </p>
                    </div>
                </div>

                <!-- Actions -->
                <div class="d-flex gap-3 justify-content-center">
                    <a href="/" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>
                        Retour à l'accueil
                    </a>
                    <button class="btn btn-outline-secondary btn-lg" onclick="history.back()">
                        <i class="fas fa-arrow-left me-2"></i>
                        Page précédente
                    </button>
                </div>
                
                <!-- Help Links -->
                <div class="mt-4">
                    <p class="text-muted">
                        Besoin d'aide ? 
                        <a href="/proposals" class="text-decoration-none">Consultez les propositions</a> ou 
                        <a href="/analytics" class="text-decoration-none">visitez le dashboard</a>
                    </p>
                </div>
                
                @if (Environment.IsDevelopment())
                {
                    <!-- Development Info -->
                    <div class="mt-5">
                        <div class="card border-warning">
                            <div class="card-header bg-warning text-dark">
                                <h6 class="mb-0">
                                    <i class="fas fa-code me-1"></i>
                                    Informations de développement
                                </h6>
                            </div>
                            <div class="card-body text-start">
                                <p><strong>Request ID:</strong> @Activity.Current?.Id</p>
                                <p class="mb-0"><strong>Time:</strong> @DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm:ss UTC")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Fun Nicolas Quote -->
<div class="bg-light py-4 mt-5">
    <div class="container text-center">
        <blockquote class="blockquote">
            <p class="mb-3">"Même en cas d'erreur, c'est toujours Nicolas qui paie !"</p>
            <footer class="blockquote-footer">
                L'équipe <cite title="Nicolas Qui Paie">Nicolas Qui Paie</cite>
            </footer>
        </blockquote>
    </div>
</div>

@code {
    // Error handling code would go here
}
