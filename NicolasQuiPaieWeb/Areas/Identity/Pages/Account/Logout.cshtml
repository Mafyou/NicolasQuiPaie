@page "/Identity/Account/Logout"
@model LogoutModel
@{
    ViewData["Title"] = "Déconnexion";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <i class="fas fa-sign-out-alt fa-3x text-muted mb-3"></i>
                    <h2 class="fw-bold mb-3">À bientôt, Nicolas !</h2>
                    <p class="text-muted mb-4">Vous avez été déconnecté avec succès.</p>
                    
                    <div class="d-grid gap-3">
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>
                            Retour à l'accueil
                        </a>
                        <a href="/Identity/Account/Login" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Se reconnecter
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>