@page "/Identity/Account/Login"
@model LoginModel

@{
    ViewData["Title"] = "Connexion Nicolas";
}

@section Styles {
    <link href="~/css/identity.css" rel="stylesheet" />
    <style>
        /* Ensure proper text contrast */
        .form-floating > label {
            color: #6c757d !important;
        }
        
        .text-dark, .fw-bold, h2, h6, p, small {
            color: #212529 !important;
        }
        
        .card-body h2 {
            color: #212529 !important;
        }
        
        .card-body p {
            color: #6c757d !important;
        }
    </style>
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card border-0 shadow-lg">
                <div class="card-body p-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <i class="fas fa-sign-in-alt fa-3x text-primary mb-3"></i>
                        <h2 class="fw-bold text-dark">Connexion Nicolas</h2>
                        <p class="text-muted">Connectez-vous à votre compte</p>
                    </div>

                    <section>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <!-- Email -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nicolas@exemple.fr" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            
                            <!-- Password -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Mot de passe" />
                                <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            
                            <!-- Remember Me -->
                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe" class="form-label text-dark">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            
                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Se connecter
                                </button>
                            </div>
                            
                            <!-- Links -->
                            <div class="text-center mt-4">
                                <p class="mb-2">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Mot de passe oublié ?</a>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Créer un nouveau compte Nicolas</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Fun Quote Section -->
<div class="bg-light py-4">
    <div class="container text-center">
        <blockquote class="blockquote">
            <p class="mb-3 text-dark">"Bienvenue dans la démocratie souveraine numérique !"</p>
            <footer class="blockquote-footer">
                La communauté <cite title="Nicolas Qui Paie">Nicolas Qui Paie</cite>
            </footer>
        </blockquote>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}