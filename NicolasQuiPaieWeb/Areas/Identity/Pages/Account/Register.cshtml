@page "/Identity/Account/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Rejoindre les Nicolas";
}

@section Styles {
    <link href="~/css/identity.css" rel="stylesheet" />
    <style>
        /* Ensure proper text contrast */
        .form-floating > label {
            color: #6c757d !important;
        }
        
        .text-dark, .fw-bold, h2, h6, p, small {
            color: #212529 !important;
        }
        
        .alert-info .text-dark,
        .alert-info .fw-bold,
        .alert-info h6,
        .alert-info small {
            color: #055160 !important;
        }
        
        .badge-preview .text-dark,
        .badge-preview .fw-bold {
            color: #212529 !important;
        }
    </style>
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg">
                <div class="card-body p-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <i class="fas fa-user-plus fa-3x text-primary mb-3"></i>
                        <h2 class="fw-bold text-dark">Rejoindre les Nicolas</h2>
                        <p class="text-muted">Créez votre compte pour participer à la démocratie souveraine numérique</p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Display Name -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.DisplayName" class="form-control" autocomplete="name" aria-required="true" placeholder="Votre nom d'affichage" />
                            <label asp-for="Input.DisplayName">Nom d'affichage Nicolas</label>
                            <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                        </div>
                        
                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nicolas@exemple.fr" />
                            <label asp-for="Input.Email">Adresse email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <!-- Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mot de passe" />
                            <label asp-for="Input.Password">Mot de passe</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                        <!-- Confirm Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmer le mot de passe" />
                            <label asp-for="Input.ConfirmPassword">Confirmer le mot de passe</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Badge Information -->
                        <div class="alert alert-info mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-medal fa-2x text-primary me-3"></i>
                                <div>
                                    <h6 class="fw-bold mb-1" style="color: #055160 !important;">🥉 Badge Automatique : Petit Nicolas</h6>
                                    <small style="color: #055160 !important;">
                                        Votre badge fiscal sera automatiquement attribué selon votre activité. 
                                        Vous commencez en tant que <strong>Petit Nicolas</strong> avec un vote égal à tous.
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Badge Evolution Info -->
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body p-3">
                                <h6 class="fw-bold text-center mb-3 text-dark">🏆 Évolution des Badges Nicolas</h6>
                                <div class="row g-2 text-center">
                                    <div class="col-4">
                                        <div class="badge-preview">
                                            <div class="mb-1">🥉</div>
                                            <small class="fw-bold text-dark">Petit Nicolas</small>
                                            <div class="badge bg-secondary">1 vote</div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="badge-preview">
                                            <div class="mb-1">🥈</div>
                                            <small class="fw-bold text-dark">Gros Nicolas</small>
                                            <div class="badge bg-info">1 vote</div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="badge-preview">
                                            <div class="mb-1">🏆</div>
                                            <small class="fw-bold text-dark">Nicolas Suprême</small>
                                            <div class="badge bg-warning text-dark">1 vote</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center mt-2">
                                    <small class="text-dark">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Système démocratique : 1 Nicolas = 1 vote ! Les badges montrent votre contribution.
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-user-plus me-2"></i>
                            Créer mon compte Nicolas
                        </button>
                    </form>

                    <!-- Login Link -->
                    <div class="text-center mt-4">
                        <p class="text-muted">
                            Déjà membre de la communauté Nicolas ?
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Se connecter</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Fun Quote Section -->
<div class="bg-light py-4">
    <div class="container text-center">
        <blockquote class="blockquote">
            <p class="mb-3 text-dark">"Rejoignez la révolution fiscale numérique !"</p>
            <footer class="blockquote-footer">
                La communauté <cite title="Nicolas Qui Paie">Nicolas Qui Paie</cite>
            </footer>
        </blockquote>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}