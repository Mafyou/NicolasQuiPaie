<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <!-- 
    Optimized Blazor WebAssembly project file for .NET 9 and C# 13.0
    Features:
    - C# 13.0 language features enabled
    - Blazor WebAssembly performance optimizations
    - Assembly trimming for smaller bundle size
    - AOT compilation for Release builds
    - JSON serialization optimizations (compatible with JS interop)
    - Build performance improvements
    - SignalR 8.0.7 compatibility
    - Chart.js 4.4.1 integration
  -->

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>13.0</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>f2f6ef31-3cb9-47ad-a14b-faccad858769</UserSecretsId>
    
    <!-- Performance and optimization settings -->
    <BlazorWebAssemblyPreserveCollationData>false</BlazorWebAssemblyPreserveCollationData>
    <BlazorWebAssemblyJiterpreter>true</BlazorWebAssemblyJiterpreter>
    <RunAOTCompilation>false</RunAOTCompilation>
    <PublishTrimmed>true</PublishTrimmed>
    <TrimMode>partial</TrimMode>
    
    <!-- JSON serialization: Enable reflection for JS interop compatibility -->
    <!-- Setting to false causes JsonSerializerIsReflectionDisabled errors in production -->
    <!-- Blazor's JS interop requires reflection-based JSON serialization -->
    <JsonSerializerIsReflectionEnabledByDefault>true</JsonSerializerIsReflectionEnabledByDefault>
    
    <!-- Build performance -->
    <UseRidGraph>false</UseRidGraph>
    <Deterministic>true</Deterministic>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningLevel>5</WarningLevel>
    
    <!-- Enable faster builds in development -->
    <BlazorEnableTimeZoneSupport>true</BlazorEnableTimeZoneSupport>
    <InvariantGlobalization>false</InvariantGlobalization>
    
    <!-- JavaScript interop optimizations -->
    <BlazorWebAssemblyLoadAllGlobalizationData>false</BlazorWebAssemblyLoadAllGlobalizationData>
  </PropertyGroup>

  <!-- Conditional AOT compilation for Release builds -->
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <RunAOTCompilation>true</RunAOTCompilation>
    <OptimizationPreference>Speed</OptimizationPreference>
    <PublishTrimmed>true</PublishTrimmed>
    <TrimMode>full</TrimMode>
    
    <!-- Keep JSON serialization reflection enabled even in Release for JS interop -->
    <JsonSerializerIsReflectionEnabledByDefault>true</JsonSerializerIsReflectionEnabledByDefault>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="DTO\**" />
    <Content Remove="DTO\**" />
    <EmbeddedResource Remove="DTO\**" />
    <None Remove="DTO\**" />
  </ItemGroup>

  <ItemGroup>
    <!-- Blazor WebAssembly packages -->
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="9.0.0" PrivateAssets="all" />
    
    <!-- JWT Authentication packages for client-side -->
    <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="9.0.0" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.2.1" />
    
    <!-- SignalR client for real-time updates -->
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="9.0.0" />
    
    <!-- Local storage for JWT token storage -->
    <PackageReference Include="Blazored.LocalStorage" Version="4.5.0" />
    
    <!-- HTTP client for API communication -->
    <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Shared\NicolasQuiPaieData\NicolasQuiPaieData.csproj" />
  </ItemGroup>

  <!-- Trim unused features for better performance -->
  <ItemGroup>
    <TrimmerRootDescriptor Include="TrimmerRoots.xml" Condition="Exists('TrimmerRoots.xml')" />
  </ItemGroup>

  <!-- Enable Source Generators for better performance -->
  <ItemGroup>
    <CompilerVisibleProperty Include="DeferredSourceGeneratorExecution" />
    <CompilerVisibleProperty Include="MSBuildProjectDirectory" />
  </ItemGroup>

  <!-- 
    Performance Note: While JsonSerializerIsReflectionEnabledByDefault=true adds some overhead,
    it's required for Blazor's JavaScript interop to function properly. Disabling it causes
    critical production errors with FocusOnNavigate, HeadOutlet, and other JS interop features.
    
    Alternative optimization: Use source generators for custom JSON serialization where needed
    instead of globally disabling reflection-based serialization.
  -->

</Project>
